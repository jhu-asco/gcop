<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="Airbot">
<xacro:property name="z0" value=".05" />
<xacro:property name="y0" value=".05" />
<xacro:property name="l1" value=".1" />
<xacro:property name="l2" value=".3" />
<xacro:property name="l3" value=".2" />

<!--Structural Properties-->
<xacro:property name="m0" value="1" />
<xacro:property name="m1" value=".1" />
<xacro:property name="m2" value=".3" />
<xacro:property name="m3" value=".2" />

<xacro:macro name="compute_inertia" params="mass x y z">
      <mass value="${mass}"/>
      <inertia ixx="${mass*(y*y + z*z)/3}" ixy="0.0" ixz="0.0" iyy="${mass*(x*x + z*z)/3}" iyz="0.0" izz="${mass*(x*x + y*y)/3}"/>
</xacro:macro>

  <link name="baselink"/>
  <link name="airbase">
    <visual>
			<origin rpy="0 0 0" xyz="0.0 0.0 0.1"/>
      <geometry>
				 <mesh filename="package://gcop_urdf/meshes/pelican1.dae" scale="0.025 0.025 0.025"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 0.8 1"/>
      </material>
    </visual>
    <inertial>
      <mass value="${m0}"/>
      <inertia ixx="${m0*4.32e-3}" ixy="0.0" ixz="0.0" iyy="${m0*4.32e-3}" iyz="0.0" izz="${m0*8.41e-3}"/>
    </inertial>
  </link>
  <link name="link1">
    <visual>
			<origin rpy="0 0 0" xyz="0.0 ${l1/2} 0.0"/>
      <material name="blue">
        <color rgba="0 0 0.8 1"/>
      </material>
      <geometry>
        <box size="0.02 ${l1} 0.02"/>
      </geometry>
    </visual>
    <inertial>
			<origin rpy="0 0 0" xyz="0.0 ${l1/2} 0.0"/>
			<xacro:compute_inertia mass="${m1}" x="0.02" y="${l1}" z="0.02" />
    </inertial>
  </link>
  <link name="link2">
    <visual>
			<origin rpy="0 0 0" xyz="0.0 0.0 ${-l2/2}"/>
      <geometry>
        <box size="0.02 0.02 ${l2}"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 0.8 1"/>
      </material>
    </visual>
    <inertial>
			<origin rpy="0 0 0" xyz="0.0 0.0 ${-l2/2}"/>
			<xacro:compute_inertia mass="${m2}" x="0.02" y="0.02" z="${l2}" />
    </inertial>
  </link>
  <link name="link3">
    <visual>
			<origin rpy="0 0 0" xyz="0.0 0.0 ${-l3/2}"/>
      <geometry>
        <box size="0.02 0.02 ${l3}"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 0.8 1"/>
      </material>
    </visual>
    <inertial>
			<origin rpy="0 0 0" xyz="0.0 0.0 ${-l3/2}"/>
			<xacro:compute_inertia mass="${m3}" x="0.02" y="0.02" z="${l3}" />
    </inertial>
  </link>
   <link name="link4">
    <visual>
			<origin rpy="0 0 0" xyz="0.0 ${-l1/2} 0.0"/>
      <material name="red">
        <color rgba="0.8 0 0 1"/>
      </material>
      <geometry>
        <box size="0.02 ${l1} 0.02"/>
      </geometry>
    </visual>
    <inertial>
			<origin rpy="0 0 0" xyz="0.0 ${-l1/2} 0.0"/>
			<xacro:compute_inertia mass="${m1}" x="0.02" y="${l1}" z="0.02" />
    </inertial>
  </link>
  <link name="link5">
    <visual>
			<origin rpy="0 0 0" xyz="0.0 0.0 ${-l2/2}"/>
      <geometry>
        <box size="0.02 0.02 ${l2}"/>
      </geometry>
      <material name="red">
        <color rgba="0.8 0 0 1"/>
      </material>
    </visual>
    <inertial>
			<origin rpy="0 0 0" xyz="0.0 0.0 ${-l2/2}"/>
			<xacro:compute_inertia mass="${m2}" x="0.02" y="0.02" z="${l2}" />
    </inertial>
  </link>
  <link name="link6">
    <visual>
			<origin rpy="0 0 0" xyz="0.0 0.0 ${-l3/2}"/>
      <geometry>
        <box size="0.02 0.02 ${l3}"/>
      </geometry>
      <material name="red">
        <color rgba="0.8 0 0 1"/>
      </material>
    </visual>
    <inertial>
			<origin rpy="0 0 0" xyz="0.0 0.0 ${-l3/2}"/>
			<xacro:compute_inertia mass="${m3}" x="0.02" y="0.02" z="${l3}" />
    </inertial>
  </link>
 <!-- Joints -->
  <joint name="basetoairbase" type="fixed">
    <parent link="baselink"/>
    <child link="airbase"/>
    <origin rpy="0 0 0" xyz="0 0 0"/>
  </joint>
  <joint name="airbasetolink1" type="revolute">
    <parent link="airbase"/>
    <child link="link1"/>
		<origin rpy="0 0 0" xyz="0 ${y0} ${-z0}"/>
    <axis xyz="0 0 1"/>
		<limit effort="30" velocity="5.0" lower="-5" upper="5" />
  </joint>
	<joint name="link1tolink2" type="revolute">
    <parent link="link1"/>
    <child link="link2"/>
		<origin rpy="0 0 0" xyz="0 ${l1} 0"/>
    <axis xyz="0 1 0"/>
		<limit effort="30" velocity="5.0" lower="-5" upper="5" />
  </joint>
	<joint name="link2tolink3" type="revolute">
    <parent link="link2"/>
    <child link="link3"/>
		<origin rpy="0 0 0" xyz="0 0 ${-l2}"/>
    <axis xyz="0 1 0"/>
		<limit effort="30" velocity="5.0" lower="-5" upper="5" />
  </joint>
  <joint name="airbasetolink4" type="revolute">
    <parent link="airbase"/>
    <child link="link4"/>
		<origin rpy="0 0 0" xyz="0 ${-y0} ${-z0}"/>
    <axis xyz="0 0 1"/>
		<limit effort="30" velocity="5.0" lower="-5" upper="5" />
  </joint>
	<joint name="link4tolink5" type="revolute">
    <parent link="link4"/>
    <child link="link5"/>
		<origin rpy="0 0 0" xyz="0 ${-l1} 0"/>
    <axis xyz="0 1 0"/>
		<limit effort="30" velocity="5.0" lower="-5" upper="5" />
  </joint>
	<joint name="link5tolink6" type="revolute">
    <parent link="link5"/>
    <child link="link6"/>
		<origin rpy="0 0 0" xyz="0 0 ${-l2}"/>
    <axis xyz="0 1 0"/>
		<limit effort="30" velocity="5.0" lower="-5" upper="5" />
  </joint>
</robot>
